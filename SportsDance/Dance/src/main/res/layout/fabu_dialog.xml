<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              >
    <ImageView
        android:id="@+id/fabu_guanbi"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/guanbi2"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/spacing_20"
        android:layout_marginBottom="@dimen/spacing_19"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/spacing_190"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fabu_sp"
            android:layout_marginLeft="@dimen/spacing_150"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/shipin"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/fabu_shipin"
                android:layout_width="wrap_content"
                android:text="视频"
                android:padding="@dimen/spacing_20"
                android:layout_gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/textsize30"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fabu_tw"
            android:layout_marginRight="@dimen/spacing_150"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/tuwen"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/fabu_tuwen"
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_20"
                android:text="图文"
                android:layout_gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/textsize30"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>