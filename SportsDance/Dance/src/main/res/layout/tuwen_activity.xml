<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_20"
        android:layout_marginRight="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_30"
        android:background="#e1e1e1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/input_tw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_80"
            android:layout_marginLeft="@dimen/spacing_45"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="视屏标题..."
            android:textColor="#bbbbbb"
            android:textColorHint="#bbbbbb"
            android:textSize="@dimen/textsize24"/>

        <TextView
            android:id="@+id/tw_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/spacing_40"
            android:text="25"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/textsize18"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/spacing_20"
        android:background="#e1e1e1"/>

    <EditText
        android:id="@+id/input_zw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_395"
        android:layout_marginLeft="@dimen/spacing_50"
        android:layout_marginRight="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_10"
        android:background="@null"
        android:gravity="left"
        android:hint="再说点什么..."
        android:textColor="#bbbbbb"
        android:textColorHint="#bbbbbb"
        android:textSize="@dimen/textsize30"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_20"
        android:background="#e1e1e1"/>

    <GridView
        android:id="@+id/gv_tjtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_40"
        android:layout_marginTop="@dimen/spacing_10"
        android:numColumns="3"
        android:scrollbars="none"
        >
    </GridView>
</LinearLayout>