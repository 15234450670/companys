<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_20">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/spacing_300"
            android:layout_height="@dimen/spacing_230"
            android:layout_marginLeft="@dimen/spacing_20"
            android:scaleType="fitXY"
            android:src="@drawable/default_video" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_230"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/spacing_25"
            android:layout_marginRight="@dimen/spacing_30"
            android:layout_toRightOf="@+id/imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/text_white_style_28"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="left|top"
                android:text="" />
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/from_tv"
                         style="@style/text_white_style_22"
                         android:textColor="#9d60e1"
                         android:layout_marginBottom="@dimen/spacing_13"
                         android:layout_marginTop="@dimen/spacing_13"
                         android:text="sssssss" />
                     <View
                         android:layout_marginLeft="@dimen/spacing_20"
                                  android:layout_marginRight="@dimen/spacing_20"
                         android:layout_marginBottom="@dimen/spacing_13"
                         android:layout_marginTop="@dimen/spacing_13"
                         android:layout_width="2dp"
                         android:background="#e6e6e6"
                         android:layout_height="15dp" />
                     <TextView
                         android:id="@+id/from_bd"
                         style="@style/text_white_style_22"
                         android:textColor="#999999"
                         android:layout_marginBottom="@dimen/spacing_13"
                         android:layout_marginTop="@dimen/spacing_13"
                         android:text="广泛报道:" />
                 </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
       android:layout_height="@dimen/spacing_20"
        android:background="#ececec"   />
</LinearLayout>