<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_226"
        android:layout_marginLeft="@dimen/spacing_20"
        android:layout_marginRight="@dimen/spacing_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/author"
                style="@style/text_white_style_28"
                android:layout_weight="1"
                android:text=""
                android:textColor="#434343"/>

            <LinearLayout
                android:id="@+id/source_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:visibility="gone">

                <TextView
                    android:id="@+id/source"
                    style="@style/text_white_style_28"
                    android:text=""
                    android:textColor="#b92031"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:src="@drawable/announcement_tv"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/text_white_style_30"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|top"
                    android:lines="2"
                    android:text=""
                    android:textColor="#333333"/>


                <TextView
                    android:id="@+id/from_tv"
                    style="@style/text_white_style_22"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="#959595"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/spacing_248"
                android:layout_height="@dimen/spacing_140"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spacing_20"
                android:scaleType="fitXY"
                android:src="@drawable/default_video"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="@dimen/spacing_10"
        android:background="@color/line"/>
</LinearLayout>