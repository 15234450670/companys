<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_30"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year_tv"
            style="@style/text_white_style_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_50"
            android:text=""
            android:textColor="#333333"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/year_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10"
            android:src="@drawable/mathc_icon_0013"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_30"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank_tv"
            style="@style/text_white_style_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_50"
            android:text="赛事级别"
            android:textColor="#333333"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/rank_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10"
            android:src="@drawable/mathc_icon_0013"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_30"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="48dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/state_tv"
            style="@style/text_white_style_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_50"
            android:text="所有状态"
            android:textColor="#333333"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/state_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10"
            android:src="@drawable/mathc_icon_0013"/>
    </LinearLayout>


</LinearLayout>