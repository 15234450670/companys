        <mr.li.dance.ui.widget.BottomRelativeLayout
            android:id="@+id/mine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            app:default_icon="@drawable/home_icon_0012"
            app:hover_icon="@drawable/home_icon_006">


            <ImageView
                android:id="@+id/mine_icon"
                style="@style/bottom_icon_style"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:src="@drawable/home_icon_0012"/>
            <!--android:src="@drawable/tab_contact_list"-->

            <TextView
                android:id="@+id/mine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/mine"
