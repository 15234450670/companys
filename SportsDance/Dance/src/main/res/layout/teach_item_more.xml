<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_20"
        android:id="@+id/wai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sort_tv"
            android:layout_marginLeft="@dimen/spacing_20"
            android:layout_marginRight="@dimen/spacing_20"
            android:text=""
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_circle_point"/>
        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/spacing_300"
            android:layout_height="@dimen/spacing_230"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_26"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_230">
            <TextView
                android:id="@+id/name"
                style="@style/text_white_style_28"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/spacing_45"
                android:layout_weight="1"
                android:gravity="left|top"
                android:text="" />
            <TextView
                android:id="@+id/time_tv"
                style="@style/text_white_style_22"
                android:textColor="#666666"
                android:layout_marginBottom="@dimen/spacing_13"
                android:layout_marginTop="@dimen/spacing_38"
                android:text="时长：" />
            <TextView
                android:visibility="gone"
                android:background="@drawable/start_jk"
                android:id="@+id/start_item"
                android:gravity="center"
                style="@style/text_white_style_22"
                android:layout_marginBottom="@dimen/spacing_13"
                android:layout_marginTop="@dimen/spacing_20"
                android:text="正在播放" />

        </LinearLayout>

    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/wai"
        android:background="#e1e1e1"/>

</RelativeLayout>