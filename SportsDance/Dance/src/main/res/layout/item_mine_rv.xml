<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_title"
            style="@style/item_mine_rv"
            android:text="抽奖"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_15"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_date"
                style="@style/text_style"
                android:text="2017-06-28 16:30"
                android:textColor="#999999"
                android:textSize="@dimen/textsize18"/>

        </LinearLayout>
    </LinearLayout>

      <TextView
          android:id="@+id/item_money"
          android:layout_marginTop="@dimen/spacing_45"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/textsize28"
         android:text="+45.2元"
         />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mine_back_many">

    </View>

</LinearLayout>