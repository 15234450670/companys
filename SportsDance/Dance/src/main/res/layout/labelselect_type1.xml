<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin"
        android:layout_marginTop="@dimen/spacing_86"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_35"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/textsize28"

            android:text="哈哈"/>

        <RelativeLayout
            android:layout_marginRight="@dimen/spacing_44"
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:textColor="#999999"
                android:textSize="@dimen/textsize28"
                android:layout_centerVertical="true"
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tt"
                android:src="@drawable/ic_launcher"/>
        </RelativeLayout>
    </LinearLayout>
     <android.support.v7.widget.RecyclerView
         android:id="@+id/label_rv"
         android:layout_below="@+id/lin"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     </android.support.v7.widget.RecyclerView>

</RelativeLayout>