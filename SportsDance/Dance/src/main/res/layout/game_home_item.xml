<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginTop="@dimen/spacing_10"
    >

    <ImageView
        android:id="@+id/game_pic"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/triangle_end"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_86"
        android:layout_alignBottom="@+id/game_pic"
        android:background="#50000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game_tv_time"
                style="@style/text_white_style_30"
                android:layout_marginLeft="@dimen/spacing_22"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/rc_text_color_tertiary"/>

            <TextView
                android:id="@+id/game_tv_address"
                style="@style/text_white_style_30"
                android:layout_marginRight="@dimen/spacing_22"
                android:text=""
                android:textColor="@color/rc_text_color_tertiary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/game_tv"
            style="@style/text_white_style_34"
            android:layout_marginLeft="@dimen/spacing_22"
            android:layout_marginRight="@dimen/spacing_22"
            android:text=""
            android:textColor="@color/bottom_text_default_color"/>


    </LinearLayout>


</RelativeLayout>