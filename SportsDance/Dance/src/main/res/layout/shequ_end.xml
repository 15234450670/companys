<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_80"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_45"
    >

    <RelativeLayout
        android:id="@+id/shequ_dianz_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/shequ_dianz_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dianzan1"/>

        <TextView
            android:id="@+id/shequ_dianz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_toRightOf="@id/shequ_dianz_iv"
            android:text="0"
            android:textColor="#d3d3d3"
            android:textSize="@dimen/textsize28"/>
    </RelativeLayout>

    <View

        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/spacing_20"
        android:layout_marginLeft="@dimen/spacing_50"
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_toRightOf="@+id/shequ_dianz_rl"
        android:background="#e1e1e1"/>

    <RelativeLayout
        android:id="@+id/shequ_pinl_tv1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_50"
        android:layout_toRightOf="@+id/view"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/shequ_pinl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment"/>

        <TextView
            android:id="@+id/shequ_pinl_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_toRightOf="@id/shequ_pinl_iv"
            android:drawablePadding="@dimen/spacing_10"
            android:text=""
            android:textColor="#d3d3d3"
            android:textSize="@dimen/textsize28"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/shequ_iv_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/spacing_45"
        android:src="@drawable/more"

        />

</RelativeLayout>


